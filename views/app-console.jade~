.left
	.titles
		ul#application-list		
			- for (var d in applications)		
				- if (applications[d].read == true && applications[d].accept == false && applications[d].reject == false && applications[d].maybe == false)					
					li#application-row-template																							
						a(id="application-title-" + applications[d].id, href="/documents/" + applications[d].id)
							= applications[d].title
				- else if(applications[d].read == false)
					li#application-row-template
						.unread					
							a(id="application-title-" + applications[d].id, href="/documents/" + applications[d].id)
								= applications[d].title
		
			li#accepted
				a.folder-title(href='#') ACCEPTED				
				ul#accepted-list
					- for (var d in applications)
						- if (applications[d].accept == true)
							li#application-row-template																							
								a(id="application-title-" + applications[d].id, href="/documents/" + applications[d].id)
									= applications[d].title
			li#rejected
				a.folder-title(href='#') REJECTED
				ul#rejected-list
					- for (var d in applications)
						- if  (applications[d].reject == true)
							li#application-row-template
								a(id="application-title-" + applications[d].id, href="/documents/" + applications[d].id)
									= applications[d].title
								
			li#maybe
				a.folder-title(href='#') MAYBE...
				ul#maybe-list
					- for (var d in applications)
						- if (applications[d].maybe == true)
							li#application-row-template
								a(id="application-title-" + applications[d].id, href="/documents/" + applications[d].id)
									= applications[d].title
									

